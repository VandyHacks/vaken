{
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"jsx": "react",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"outDir": "./dist/",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"types/*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules/**",
		"types/**",
		"src/**/*.test.ts",
		"src/client/**/*.test.tsx"
	]
}