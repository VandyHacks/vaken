{
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"jsx": "react",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"target": "es6",
		"lib": [
			"es5",
			"es6",
			"dom",
			"es2015",
			"es2015.core",
			"es2015.collection",
			"es2015.generator",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.reflect",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext.asynciterable",
			"es2017.object",
			"es2017"
		],
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*", "__tests__/**/*"]
}
