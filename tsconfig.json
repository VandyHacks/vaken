{
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"jsx": "react",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020", // Keep up to date with https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
		"outDir": "./dist/",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "types/*"]
		},
		"types": ["node", "jest"]
	},
	"include": [
		"src/**/*.ts",
		"src/client/**/*.tsx",
		"plugins/**/*.ts",
		"scripts/**/*.ts",
		"src/client/setupTests.js"
	],
	"exclude": ["node_modules/**", "types/**"]
}
