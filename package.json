{
  "name": "vaken",
  "version": "1.0.0",
  "description": "Next-gen hacker registration system",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --parser typescript --single-quote --trailing-comma=es5 --write \"./**/*.ts\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "ts-node src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run format",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VandyHacks/vaken.git"
  },
  "keywords": [
    "hackathon",
    "registration"
  ],
  "author": "VandyHacks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VandyHacks/vaken/issues"
  },
  "homepage": "https://github.com/VandyHacks/vaken#readme",
  "dependencies": {
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "helmet": "^3.15.0",
    "mongoose": "^5.3.15",
    "reflect-metadata": "^0.1.12",
    "typegoose": "^5.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "0.0.42",
    "@types/mongoose": "^5.3.4",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  }
}
