{
  "name": "vaken",
  "version": "1.0.0",
  "description": "Next-gen hacker registration system",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly src/server.ts",
    "format": "prettier --parser typescript --single-quote --trailing-comma=es5 --write \"./**/*.ts\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "setup": "ts-node scripts/dbsetup.ts",
    "start": "ts-node src/server.ts",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run typecheck && npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run format",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VandyHacks/vaken"
  },
  "keywords": [
    "hackathon",
    "registration"
  ],
  "author": "VandyHacks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VandyHacks/vaken/issues"
  },
  "homepage": "https://github.com/VandyHacks/vaken",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bcrypt": "^3.0.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-bunyan-logger": "^2.1.0",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "mongoose": "^5.3.15",
    "reflect-metadata": "^0.1.12",
    "simple-oauth2": "^2.2.1",
    "typegoose": "^5.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^23.3.10",
    "@types/koa": "^2.0.47",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-bunyan-logger": "^2.0.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.35",
    "@types/koa__cors": "^2.2.3",
    "@types/mongoose": "^5.3.4",
    "@types/simple-oauth2": "^2.2.1",
    "@types/supertest": "^2.0.7",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "mongoose-dummy": "^1.0.8",
    "prettier": "^1.15.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  }
}
